<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Perfil</title>

        <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
        <script defer src="/js/index.js"></script>
        <script src="https://kit.fontawesome.com/7e5b2d153f.js" crossorigin="anonymous"></script>

        <link rel="shortcut icon" href="https://res.cloudinary.com/rescatedepatitas08/image/upload/v1637687235/img/icono-patitas_c1xqq0.ico"/>

        <link rel="stylesheet" href="/css/editar-perfil.css">
        <link rel="stylesheet" href="/css/barra-menu.css">
        <link rel="stylesheet" href="/css/reset.css">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,500;0,700;1,100&display=swap" rel="stylesheet">
    </head>

    <body>
    <div class="container">
        <header class="header">
            <nav class="menu">
                <a href="/" class="logo"><img src="https://res.cloudinary.com/rescatedepatitas08/image/upload/v1637687235/img/home-logo_nqrjnd.png"></a>
                <button class="toggle"><i class="fas fa-bars"></i></button>
                <ul class="nav-menu">
                    <li class="nav-menu-item"><a class="nav-menu-link nav-link" href="/mascotas-en-adopcion">ADOPTAR</a></li>
                    <li class="nav-menu-item"><a class="nav-menu-link nav-link" href="/dar-mascota-adopcion">DAR EN ADOPCIÓN</a></li>
                    <li class="nav-menu-item"><a class="nav-menu-link nav-link" href="/reportar-mascota">REPORTAR</a></li>
                    <li class="nav-menu-item"><a class="nav-menu-link nav-link" href="/mascotas-perdidas">MASCOTAS PERDIDAS</a></li>
                    <li class="nav-menu-item"><a class="nav-menu-link nav-link nav-menu-link_Active" href="/registrar-mascota">REGISTRAR MASCOTAS</a></li>
                </ul>
            </nav>
        </header>

        <br><br><br><br><br><br><br><br>

        <div class="form1" id="appVue">
            <div></div>
            <h3 class="subtitulo3">Datos Personales</h3>
            <div></div>

            <div class="grid-item">
                <label for="name">Nombre</label>
                <div class="text-input"><br>{{persona.nombre}}</div><br>
            </div>

            <div class="grid-item">
                <div for="surname">Apellido</div>
                <div class="text-input"><br>{{persona.apellido}}</div><br>
            </div>

            <div class="grid-item">
                <div for="date">Fecha de Nacimiento</div>
                <div class="text-input"><br>{{persona.fechaDeNacimiento}}</div><br>
            </div>

            <div class="grid-item">
                <div for="email">Email</div>
                <div class="text-input"><br>{{persona.email}}</div><br>
            </div>

            <div class="grid-item">
                <div for="doc-type">Tipo de documento</div>
                <div class="text-input"><br>{{persona.tipoDocumento}}</div><br>
            </div>

            <div class="grid-item">
                <div for="n-doc">Número de documento</div>
                <div class="text-input"><br>{{persona.numeroDocumento}}</div><br>
            </div>

            <div class="grid-item">
                <div for="cel">Teléfono / Celular</div>
                <div class="text-input"><br>{{persona.telefono}}</div><br>
            </div>

            <div class="grid-item">
                <div for="notification">Formas de notificación</div><br>
                <ul v-for="formaDeNotificacion in formasDeNotificacion">
                    <a><input class="check" type="checkbox" checked disabled> {{formaDeNotificacion.tipoDeNotificacion}}</a>
                </ul>
            </div>

            <div></div><div></div>

            <h3 class="subtitulo3">Contactos</h3>
            <div></div>
            <div></div>

            <div v-for="contacto in contactos">
                <ul v-if="contacto.nombreContacto === ''"></ul>

                <ul v-else>
                    <div class="grid-item">
                        <label for="contactName">Nombre<br></label>
                        <div class="text-input" disabled><br>{{contacto.nombreContacto}}</div><br>
                    </div>

                    <div class="grid-item">
                        <label for="contactSurname">Apellido<br></label>
                        <div class="text-input" disabled><br>{{contacto.apellidoContacto}}</div><br>
                    </div>

                    <div class="grid-item">
                        <label for="contactEmail">Email<br></label>
                        <div class="text-input" disabled><br>{{contacto.emailContacto}}</div><br>
                    </div>

                    <div class="grid-item">
                        <label for="contactTel">Teléfono / Celular<br></label>
                        <div class="text-input" disabled><br>{{contacto.telefonoContacto}}</div><br>
                    </div>

                </ul>
            </div>

            <div></div>
            <div></div>
            <h3 class="subtitulo3">Domicilio</h3>
            <div></div>

            <div class="grid-item">
                <label for="contactName">Provincia<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.provincia}}</div><br>
            </div>

            <div class="grid-item">
                <label for="contactSurname">Localidad<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.localidad}}</div><br>
            </div>

            <div class="grid-item">
                <label for="contactEmail">Codigo Postal<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.codigoPostal}}</div><br>
            </div>

            <div class="grid-item">
                <label for="contactTel">Calle<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.calle}}</div><br>
            </div>

            <div class="grid-item">
                <label for="contactTel">Numeración<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.numeracion}}</div><br>
            </div>

            <div class="grid-item">
                <label for="contactTel">Departamento<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.departamento}}</div><br>
            </div>

            <div class="grid-item">
                <label for="contactTel">Piso<br></label>
                <div class="text-input" disabled><br>{{persona.domicilio.piso}}</div><br>
            </div>

        </div>
    </div>

    <script src="/js/perfil.js"></script>
    </body>
</html>